{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Config",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS_DEBUG": "-g",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Werror -fno-omit-frame-pointer --coverage",
        "CMAKE_EXE_LINKER_FLAGS": "--coverage",
        "CMAKE_MODULE_LINKER_FLAGS": "--coverage",
        "CMAKE_SHARED_LINKER_FLAGS": "--coverage"
      }
    },
    {
      "name": "debug-sanitize",
      "displayName": "Debug Sanitize Config",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined,leak -Wall -Wextra -Wpedantic -Werror -fno-omit-frame-pointer ",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined,leak",
        "CMAKE_MODULE_LINKER_FLAGS": "-fsanitize=address,undefined,leak",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=address,undefined,leak"
      }
    },
    {
      "name": "release",
      "displayName": "Release Config",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O3 -march=native -DNDEBUG -fno-omit-frame-pointer"
      }
    },
    {
      "name": "release-lto",
      "displayName": "Release Config with LTO",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -march=native -DNDEBUG -fno-omit-frame-pointer -flto -fno-fat-lto-objects"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "configuration": "Debug"
    },
    {
      "name": "debug-sanitize",
      "configurePreset": "debug-sanitize",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "configuration": "Release"
    },
    {
      "name": "release-lto",
      "configurePreset": "release-lto",
      "configuration": "Release"
    }
  ],

  "testPresets": [
    {
      "name": "test-base",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true,
        "timeout": 600,
        "jobs": 6
      }
    },
    {
      "name": "test-debug",
      "inherits": "test-base",
      "configurePreset": "debug"
    },
    {
      "name": "test-release",
      "inherits": "test-base",
      "configurePreset": "release"
    }
  ]
}
